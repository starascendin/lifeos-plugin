{
  "name": "HolaAI Convexo Dev",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },

  // Mount the repo (this happens automatically, but being explicit)
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind",
  "workspaceFolder": "/workspace",

  // Named volumes - credentials + ALL node_modules (isolated from host)
  // Regenerate with: .devcontainer/generate-mounts.sh
  "mounts": [
    "source=claude-credentials-${localEnv:USER},target=/home/vscode/.claude-shared,type=volume",
    "source=holaai-convexo-monorepo-pnpm-store,target=/workspace/.pnpm-store,type=volume",
    "source=holaai-convexo-monorepo-node-modules-root,target=/workspace/node_modules,type=volume",
    "source=holaai-convexo-monorepo-node-modules-apps-lifeos-taurireact-macapp,target=/workspace/apps/lifeos/taurireact-macapp/node_modules,type=volume",
    "source=holaai-convexo-monorepo-node-modules-apps-lifeos-taurireact-macapp-plugins-capacitor-clerk-native,target=/workspace/apps/lifeos/taurireact-macapp/plugins/capacitor-clerk-native/node_modules,type=volume",
    "source=holaai-convexo-monorepo-node-modules-packages-beeperdb,target=/workspace/packages/beeperdb/node_modules,type=volume",
    "source=holaai-convexo-monorepo-node-modules-packages-chrome_exts-inspiration_ext,target=/workspace/packages/chrome_exts/inspiration_ext/node_modules,type=volume",
    "source=holaai-convexo-monorepo-node-modules-packages-holaaiconvex,target=/workspace/packages/holaaiconvex/node_modules,type=volume",
    "source=holaai-convexo-monorepo-node-modules-packages-lifeos-mcp,target=/workspace/packages/lifeos-mcp/node_modules,type=volume",
    "source=holaai-convexo-monorepo-node-modules-packages-livekit-voice-agent,target=/workspace/packages/livekit-voice-agent/node_modules,type=volume"
  ],

  // Run as non-root user
  "remoteUser": "vscode",

  // Environment variables
  "containerEnv": {
    "SHELL": "/bin/bash"
  },

  // Features to install
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "22"
    },
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },

  // Port forwarding for local dev servers
  "forwardPorts": [3000, 5173, 8080],

  // Post-create command - runs once when container is created
  "postCreateCommand": "bash .devcontainer/setup.sh",

  // Post-start command - runs every time container starts
  "postStartCommand": "bash .devcontainer/restore-claude-auth.sh",

  // VS Code customizations (optional, for VS Code users)
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ]
    }
  }
}
