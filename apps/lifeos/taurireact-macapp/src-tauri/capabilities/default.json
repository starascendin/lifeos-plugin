{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for all windows",
  "windows": ["main", "lifeos"],
  "permissions": [
    "core:default",
    "core:window:allow-show",
    "core:window:allow-hide",
    "core:window:allow-set-focus",
    "core:window:allow-close",
    "opener:default",
    "shell:allow-open",
    {
      "identifier": "http:default",
      "allow": [
        { "url": "https://*/**" }
      ]
    },
    "deep-link:default",
    "store:default",
    "oauth:allow-start",
    "oauth:allow-cancel",
    "clerk:default"
  ]
}
