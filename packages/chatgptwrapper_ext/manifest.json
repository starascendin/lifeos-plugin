{
  "manifest_version": 3,
  "name": "ChatGPT Wrapper Tailsacle",
  "version": "1.0.3",
  "description": "Simple chat interface using your existing ChatGPT session",
  "permissions": [
    "storage",
    "declarativeNetRequestWithHostAccess"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Open ChatGPT Wrapper"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "chatgpt_headers",
        "enabled": true,
        "path": "rules/chatgpt.json"
      },
      {
        "id": "x_frame_options",
        "enabled": true,
        "path": "rules/x-frame-options.json"
      }
    ]
  },
  "web_accessible_resources": [
    {
      "resources": ["proof-worker.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
