FROM node:22-slim

# Install dependencies
RUN apt-get update && apt-get install -y \
    curl git jq \
    && rm -rf /var/lib/apt/lists/*

# Install Claude Code
RUN npm install -g @anthropic-ai/claude-code

# Create directories
RUN mkdir -p /home/node/.claude /home/node/.config \
    && chown -R node:node /home/node

USER node
WORKDIR /home/node

CMD ["tail", "-f", "/dev/null"]
